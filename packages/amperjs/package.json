{
  "type": "module",
  "name": "amperjs",
  "version": "0.0.0-alpha.0",
  "author": "Slee Woo",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "pkg/*"
  ],
  "exports": {
    "./factory": {
      "types": "./pkg/src/factory.d.ts",
      "default": "./pkg/factory.js"
    }
  },
  "bin": {
    "amperjs": "pkg/cli.js"
  },
  "scripts": {
    "prebuild": "rsync -av --delete src/templates pkg",
    "build": "esbuilder src/cli.ts src/factory.ts -s '@/scripts/!(cleanup)*'",
    "postbuild": "chmod +x pkg/cli.*"
  },
  "dependencies": {
    "@amperjs/devlib": "workspace:^",
    "fs-extra": "^11.3.2",
    "kleur": "^4.1.5",
    "prompts": "^2.4.2"
  },
  "devDependencies": {
    "@amperjs/api": "workspace:^",
    "@solidjs/router": "^0.15.3",
    "@types/fs-extra": "^11.0.4",
    "@types/koa": "^3.0.0",
    "@types/koa__router": "^12.0.4",
    "@types/node": "^24.9.1",
    "@types/prompts": "^2.4.9",
    "@types/qs": "^6.14.0",
    "@vitejs/plugin-react": "^5.1.0",
    "esbuild": "^0.25.11",
    "qs": "^6.14.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-router-dom": "^7.9.4",
    "solid-js": "^1.9.9",
    "tslib": "^2.8.1",
    "typescript": "^5.9.3",
    "vite": "^7.1.12",
    "vite-plugin-solid": "^2.11.10"
  }
}
