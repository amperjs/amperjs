{
  "name": "@amperjs/esbuilder",
  "type": "module",
  "private": true,
  "files": [
    "pkg/*"
  ],
  "bin": {
    "esbuilder": "pkg/index.js"
  },
  "scripts": {
    "build": "esbuild src/index.ts --bundle --platform=node --target=node22 --format=esm --packages=external --sourcemap=linked --outdir=pkg"
  },
  "devDependencies": {
    "esbuild": "^0.25.11",
    "ora": "9.0.0",
    "tinyglobby": "^0.2.15",
    "workspace-root": "^3.3.1"
  }
}
