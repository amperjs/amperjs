{
  "extends": "./tsconfig.base.json",
  "include": ["${configDir}/src", "${configDir}/test"],
  "compilerOptions": {
    "rootDir": "${configDir}",
    "outDir": "${configDir}/pkg",
    "paths": {
      "@src/*": ["${configDir}/test/_fixtures/app/@src/*", "${configDir}/test/_fixtures/app/lib/@src/*"],
      "@/lib/*": ["${configDir}/test/_fixtures/app/*", "${configDir}/test/_fixtures/app/lib/*"],
      "@/core/*": ["${configDir}/test/_fixtures/app/core/*"],
      "@test/*": ["${configDir}/test/*"],
      "@/*": ["${configDir}/src/*"],
      "~/*": ["${configDir}/../*", "${configDir}/../../*"]
    },
    "declaration": true,
    "emitDeclarationOnly": true
  }
}
