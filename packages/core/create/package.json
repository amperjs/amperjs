{
  "type": "module",
  "name": "create-oreum",
  "version": "0.0.0-alpha.0",
  "author": "Slee Woo",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "pkg/*"
  ],
  "bin": {
    "create-oreum": "pkg/index.js",
    "oreum": "pkg/index.js"
  },
  "scripts": {
    "prebuild": "rsync -av --delete src/templates pkg",
    "build": "esbuilder src/index.ts -s '@/scripts/!(cleanup)*'",
    "postbuild": "chmod +x pkg/index.*"
  },
  "dependencies": {
    "@oreum/devlib": "workspace:^",
    "fs-extra": "^11.3.2",
    "kleur": "^4.1.5",
    "prompts": "^2.4.2"
  },
  "devDependencies": {
    "@oreum/api": "workspace:^",
    "@types/fs-extra": "^11.0.4",
    "@types/koa": "^3.0.0",
    "@types/koa__router": "^12.0.4",
    "@types/prompts": "^2.4.9",
    "vite": "^7.1.9"
  }
}
